---
const { frontmatter } = Astro.props;
import BaseLayout from "./BaseLayout.astro";

import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Retrieve all posts from the "posts" collection, which returns an unsorted array of post objects
import { getCollection } from "astro:content";
import LatestPosts from "@/components/blog/LatestPosts.astro";
const allPostsUnsorted = await getCollection("posts");
// Sort the posts in descending order by publication date (newest to oldest)
const allPosts = allPostsUnsorted.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---

<style>
  /* Mobile heading sizes - matching homepage pattern */
  @media (max-width: 767px) {
    .post-title {
      font-size: 1.75rem !important; /* 28px - larger post title on mobile */
    }

    .section-heading {
      font-size: 1.5rem !important; /* 24px - larger than 18px body text */
    }
  }
</style>

<BaseLayout>
  <section class="mt-12 md:mt-16 lg:mt-20 mb-8 md:mb-12 lg:mb-16">
    <Wrapper variant="standard" class="py-8 md:py-12 lg:py-16 xl:py-24 px-6 md:px-8">
      <Text
        tag="h1"
        variant="displayXS"
        class="text-black dark:text-white font-medium post-title"
      >
        {frontmatter.title}
      </Text>
      <Text
        tag="p"
        variant="textSM"
        class="text-zinc-500 text-balance mt-6 dark:text-zinc-400"
      >
        {frontmatter.description}
      </Text>

      <img
        class="object-cover aspect-[16/9] rounded-xl mt-8"
        src={frontmatter.image.url}
        alt={frontmatter.image.url}
      />
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="py-8 md:py-12 lg:py-16 xl:py-24 px-6 md:px-8">
      <div class="border-t dark:border-white/10 border-black/10 pt-6 mt-8">
        <div
          class="flex gap-4 flex-col md:flex-row items-center justify-between mb-8"
        >
          <div class="flex items-center gap-x-3">
            <img
              class="object-cover size-10 rounded-full"
              src={frontmatter.avatar.url}
              alt={frontmatter.avatar.url}
            />
            <div class="flex flex-col text-zinc-500 dark:text-zinc-400">
              <time datetime={frontmatter.pubDate.toString().slice(0, 10)}>
                <Text tag="span" variant="textXS" class="font-medium"
                  >Written on {frontmatter.pubDate.toString().slice(0, 10)}
                </Text>
              </time>
              <Text tag="span" variant="textXS" class="font-medium">
                by {frontmatter.author}
              </Text>
            </div>
          </div>
          <div class="flex flex-wrap items-center gap-1">
            {
              frontmatter.tags.map((tag) => (
                <>
                  <Text
                    tag="a"
                    variant="textSM"
                    title={tag}
                    aria-label={tag}
                    href={`/blog/tags/${tag}`}
                    class="text-zinc-500 hover:text-black dark:text-zinc-400 dark:hover:text-white font-medium"
                  >
                    {tag}
                  </Text>
                </>
              ))
            }
          </div>
        </div>
      </div>
      <Wrapper variant="prose">
        <slot />
      </Wrapper>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="py-8 md:py-12 lg:py-16 xl:py-24 px-6 md:px-8">
      <Text
        tag="h3"
        variant="displayXS"
        class="text-black dark:text-white font-medium mb-4 section-heading"
      >
        Latest blog posts
      </Text>
      <div
        class="gap-2 sm:flex sm:items-center sm:justify-between border-t dark:border-white/10 border-black/10 pt-4 mt-4"
      >
        <div class="">
          <Text
            tag="a"
            variant="textSM"
            href="/blog/home"
            aria-label="your label"
            title="link to your page"
            class="text-zinc-500 hover:text-black dark:text-zinc-400 dark:hover:text-white font-medium"
            >See all posts
          </Text>
        </div>
      </div>
      <div class="mt-8 flex flex-col">
        {
          allPosts
            .slice(0, 2)
            .map((post) => (
              <LatestPosts
                url={"/blog/posts/" + post.slug}
                title={post.data.title}
                alt={post.data.title}
                pubDate={post.data.pubDate.toString().slice(4, 10)}
              />
            ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
