---
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// Fetch footer data from Payload CMS
const res = await fetch('https://payload-cms-7e43.onrender.com/api/globals/footer');
const footer = await res.json();
---

<footer class="py-12">
  <Wrapper variant="standard">
    <div class="space-y-8">
      <p class="text-sm text-[var(--color-text)]">{footer.copyright}</p>
      {footer.fontCredit?.enabled && (
        <p class="text-sm text-[var(--color-text)]">
          {footer.fontCredit.text}
          <a href={footer.fontCredit.fontLink} class="underline" target="_blank" rel="noopener">Lexend</a>
        </p>
      )}
      {footer.additionalContent?.html && (
        <div class="text-sm text-[var(--color-text)]" set:html={footer.additionalContent.html} />
      )}
    </div>
  </Wrapper>
</footer>
